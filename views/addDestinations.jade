form(method='post', action='/add', class='form')
  .form-group
    p Where do you want to go?
    input.form-control(type='text', name='destination' id='autocomplete')
  .form-group
    p For how many days?
    input.form-control(type='number', name='daysAway')
  .form-group
    p When do you want to go?
    input.form-control(type='month', name='month')
  .form-group
    p What day do you want to leave?
    select.day(name='day')
      option(value='Monday') Monday
      option(value='Tuesday') Tuesday
      option(value='Wednesday') Wednesday
      option(value='Thursday') Thursday
      option(value='Friday') Friday
      option(value='Saturday') Saturday
      option(value='Sunday') Sunday
  button.btn.btn-default(type='submit') Add Destination
